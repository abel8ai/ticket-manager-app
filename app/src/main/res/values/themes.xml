<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TicketManager" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/grey_90</item>
        <item name="colorPrimaryVariant">@color/grey_20</item>
        <item name="colorOnPrimary">@color/primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary</item>
        <item name="colorSecondaryVariant">@color/grey_20</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:editTextColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

<!--    style for search view-->
    <style name="MySearchViewStyle" parent="Widget.AppCompat.SearchView">
        <!-- Close button icon -->
        <item name="closeIcon">@drawable/ic_close_24</item>
        <!-- Search button icon -->
        <item name="searchIcon">@drawable/ic_search_24</item>
        <!-- Commit icon shown in the query suggestion row -->
        <item name="commitIcon">@drawable/ic_arrow_forward_24</item>
    </style>

    <style name="button_outline">
        <item name="android:textColor">@color/primary</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">@drawable/btn_outline</item>
    </style>

</resources>